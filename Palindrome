"""
A program to test if a word is a palindrome
"""

class Palindrome:

    def palin(self):

        answer = input("Enter a word to test if it is a palindrome.")

        answer = answer.lower()

        if answer[::-1] == answer:
            print("This is a palindrome.")
        else:
            print("This is not a planindrome.")


def main():

    pal = Palindrome()

    pal.palin()

main()